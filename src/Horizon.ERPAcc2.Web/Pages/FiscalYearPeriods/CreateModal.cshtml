@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Horizon.ERPAcc2.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Horizon.ERPAcc2.Web.Pages.FiscalYearPeriods
@using Horizon.ERPAcc2.FiscalYearPeriods;
@using System.Globalization
@inject IHtmlLocalizer<ERPAcc2Resource> L
@model CreateModalModel
@{
    Layout = null;
}


<form data-ajaxForm="true" asp-page="/FiscalYearPeriods/CreateModal" autocomplete="off">
    <abp-modal id="FiscalYearPeriodCreateModal">
        <abp-modal-header title="@L["NewFiscalYearPeriod"].Value"></abp-modal-header>

        <abp-modal-body>
@*//<suite-custom-code-block-1>*@
@*//</suite-custom-code-block-1>*@
                    <abp-input asp-for="FiscalYearId" />
                    

            <abp-input asp-for="FiscalYearPeriod.PeriodName"   />


            <abp-input asp-for="FiscalYearPeriod.CompanyId"   />

            <abp-date-picker auto-update-input="true" today-button-classes="btn-primary" asp-for="FiscalYearPeriod.StartDate" data-date="@DateTime.Now.ToString("yyyy-MM-dd")" />
            <abp-date-picker auto-update-input="true" today-button-classes="btn-primary" asp-for="FiscalYearPeriod.EndDate" data-date="@DateTime.Now.ToString("yyyy-MM-dd")" />

            <abp-input asp-for="FiscalYearPeriod.PeriodStatusId"   />


            <abp-input asp-for="FiscalYearPeriod.IsClosed"   />

            <abp-date-picker auto-update-input="false" today-button-classes="btn-primary" asp-for="FiscalYearPeriod.CloseDate" data-date="" />

            <abp-input asp-for="FiscalYearPeriod.TotalDepit"   data-val="false"/>


            <abp-input asp-for="FiscalYearPeriod.TotalCredit"   data-val="false"/>


            <abp-input asp-for="FiscalYearPeriod.ClosingBalance"   data-val="false"/>


            <abp-input asp-for="FiscalYearPeriod.BeginingInventory"   data-val="false"/>


            <abp-input asp-for="FiscalYearPeriod.Purchases"   data-val="false"/>


            <abp-input asp-for="FiscalYearPeriod.EndiningInventory"   data-val="false"/>


            <abp-input asp-for="FiscalYearPeriod.COGS"   data-val="false"/>

                    
                
@*//<suite-custom-code-block-2>*@
@*//</suite-custom-code-block-2>*@
@*//<suite-custom-code-block-3>*@
@*//</suite-custom-code-block-3>*@
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)">
@*//<suite-custom-code-block-4>*@
@*//</suite-custom-code-block-4>*@
        </abp-modal-footer>
    </abp-modal>
</form>
