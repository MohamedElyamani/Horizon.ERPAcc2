@using Microsoft.AspNetCore.Mvc.Localization
@using Horizon.ERPAcc2.Localization
@inject IHtmlLocalizer<ERPAcc2Resource> L
@model Horizon.ERPAcc2.Web.Pages.Shared.LookupModal
@{
    Layout = null;
}

